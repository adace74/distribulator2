<!-- Define the Configuration Markup Language "config" document type. -->

<!-- The "config" tag. -->
<!ELEMENT config (binary+, logging?, environment+)>

<!-- The "binary" tag. -->
<!ELEMENT binary EMPTY>
<!ATTLIST binary
    name CDATA #REQUIRED
    value CDATA #REQUIRED>

<!-- The "logging" tag. -->
<!ELEMENT logging EMPTY>
<!ATTLIST logging
    facility CDATA #REQUIRED>

<!-- The "environment" tag. -->
<!ELEMENT environment (servergroup+)>
<!ATTLIST environment
    name CDATA #REQUIRED>

<!-- The "servergroup" tag. -->
<!ELEMENT servergroup (server+)>
<!ATTLIST servergroup
    name CDATA #IMPLIED
    username CDATA #IMPLIED>

<!-- The "server" tag. -->
<!ELEMENT server (#PCDATA)>
