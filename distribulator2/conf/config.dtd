<!-- Define the "config" document type. -->

<!DOCTYPE config [

    <!-- The "config" tag. -->
    <!ELEMENT config (binary+, logging?, environment+)>

        <!-- The "binary" tag. -->
        <!ELEMENT binary>
        <!ATTLIST binary
            name CDATA #IMPLIED
            value CDATA #IMPLIED>

        <!-- The "logging" tag. -->
        <!ELEMENT logging>
        <!ATTLIST logging
            facility CDATA #IMPLIED>

        <!-- The "environment" tag. -->
        <!ELEMENT environment (servergroup+)>
        <!ATTLIST environment
            name CDATA #IMPLIED>

            <!-- The "servergroup" tag. -->
            <!ELEMENT servergroup (server+)>
            <!ATTLIST servergroup
                name CDATA #IMPLIED
                username CDATA #IMPLIED>

                <!-- The "server" tag. -->
                <!ELEMENT server #PCDATA>

]>
